<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Start Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startService"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Stop Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopService"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@id/startService" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>



    <Button
            android:text="Start Intent Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startIntentService"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@id/stopService"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button
            android:text="Stop Intent Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopIntentService"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/startIntentService"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>



    <Button
            android:text="Start Asynchronous Task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/startAsynchronousTask"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@id/stopIntentService"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    <Button
            android:text="Start Asynchronous Task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopAsynchronousTask"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/startAsynchronousTask"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>